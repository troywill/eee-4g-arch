#!/usr/bin/env perl
use warnings;
use strict;

&run_command ('pacman --sync libgl');
&run_command ('pacman --sync xorg');
&run_command ('pacman --sync mesa');
&run_command ('pacman --sync xf86-video-intel');
&run_command ('pacman --sync xf86-input-synaptics');
&run_command ('pacman --sync xf86-input-synaptics');
&run_command ('pacman --sync pacman -S hal dbus xf86-input-evdev');

sub run_command {
    my $command = shift;
    print "=> $command\n";
    system $command;
}
